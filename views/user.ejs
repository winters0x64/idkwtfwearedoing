<!-- user.ejs -->
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body {
            background-color: #14171a;
            color: #d9d9d9;
            padding-top: 30px;
        }

        h1, h2, p {
            color: #d9d9d9;
        }

        .blogs {
            padding: 20px;
        }

        .blogs h2 {
            margin-bottom: 5px;
        }

        .blogs p {
            margin-bottom: 20px;
        }

        .follow-button {
            margin-top: 20px;
        }

        .container {
            background-color: #192734;
            border-radius: 10px;
            padding: 20px;
        }

        .btn-primary {
            background-color: #1da1f2;
            border-color: #1da1f2;
        }

        .btn-primary:hover {
            background-color: #0e71a8;
            border-color: #0e71a8;
        }

        .profile-photo {
            max-width: 200px;
            border-radius: 50%;
            margin: 0 auto;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <img class="profile-photo" src="https://picsum.photos/200" alt="Bob's Profile Photo">
                <h1><%= username %></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="blogs">
                    <h1>Blogs</h1>
                    <% if (row && row.length > 0) { %>
                        <% for (let i = 0; i < 10; i++) { %>
                            <% if (row[i]) { %>
                                <h2><%= row[i].name %></h2>
                                <p><%- row[i].content %></p>
                            <% } else { %>
                                <% break; %>
                            <% } %>
                        <% } %>
                    <% } else { %> 
                        <p><%= username %> has no Blogs</p>
                    <% } %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="blogs">
                    <h2>Followers: <%= data.followers %></h2>
                    <h2>Following: <%= data.following %></h2>
                </div>
                <div class="follow-button">
                    <form method="post" action="/follow/<%= username %>">
                        <button type="submit" class="btn btn-primary">Follow <%= username %></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
